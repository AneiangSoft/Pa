# EditorConfig 是帮助多个编辑器和 IDE 维护一致的编码样式的文件
# https://editorconfig.org

root = true

# 所有文件
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# C# 文件
[*.cs]
indent_style = space
indent_size = 4
end_of_line = crlf

# XML 项目文件
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2

# XML 配置文件
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# PowerShell 文件
[*.ps1]
indent_style = space
indent_size = 4

